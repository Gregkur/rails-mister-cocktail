<div class = "container">
    <div class="background background-add">
        <div class="container my-4">
        <ul class="list-group">
                <li class="list-group-item my-4">
                    ⭐<%=@cocktail.name %>⭐
                    <br>
                </li>
                <% @cocktail.doses.each do |dose| %>
                       <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
                </td>
                </tr>
                <% end %>
                
            <h1><%= link_to "Add ingredient!", new_cocktail_dose_path(@cocktail), class: "btn btn-dark btn-lg button dark" %></h1>
            <h1><%= link_to "Go back", '/cocktails', class: "btn btn-dark btn button  " %></h1>
        </div>
        </ul>
        </div>
    </div>
</div>